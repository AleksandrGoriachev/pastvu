#top(data-bind="with: repository[M!M]")
	.fringe2#panel
		#panelTools.hide-text
			a#toUpload.labledIco.strokeAfter.iconBefore(href="/u/photoUpload", target="_blank", data-bind="style:{display: loggedIn() ? '' : 'none'}")
				.ico
				.text(data-bind="text: $root.i18n.image_upload()")
			a#toAdmin.labledIco.strokeAfter.iconBefore(href="/admin", target="_blank", data-bind="style:{display: auth.iAm.role_level()>=50 ? '':'none'}")
				.ico
				.text(data-bind="text: $root.i18n.admin()")
			a#toProfile.labledIco.iconBefore(target="_blank", data-bind="style:{display: loggedIn()?'':'none'}, attr:{href: '/u/'+auth.iAm.login()}")
				.ico.fringe2(data-bind="style: {backgroundImage: 'url('+profileAvatar()+')'}")
				.text(data-bind="text: profile")
			#toRegister.labledIco.iconBefore(data-bind="style:{display: loggedIn() || !registrationAllowed() ? 'none':''}, event:{click: function(data, evt){auth.show('reg')}}")
				.ico
				.text(data-bind="text: $root.i18n.register()")
			#toLogIn.labledIco.strokeBefore.iconAfter(data-bind="style:{display: loggedIn()? 'none' : ''}, event:{click: function(data, evt){auth.show('login')}}")
				.text(data-bind="text: $root.i18n.login()")
				.ico
			#toLogOut.labledIco.strokeBefore.iconAfter(data-bind="style:{display: loggedIn()?'':'none'}, event:{click: function(data, evt){auth.doLogout()}}")
				.text(data-bind="text: $root.i18n.logout()")
				.ico
	.span2-3
		a.fringe2#logo(href='/', target='_self')
			#appName Retro photo of mankind's habitat
			#appMsg(data-bind="css: msgCss(), style: {display: msg().length > 0 ? '' : 'none'}")
				//i.icon-warning-sign(style="margin-top: 3px; margin-right: 4px;")
				span(data-bind="text: msg()")