.adminNews(data-bind="with: repository[M!M]")
	h4(data-bind="text: createMode() ? 'Создание новости' : 'Редактирование новости'")

	form.form-horizontal
		.control-group
			label.control-label Заголовок
			.controls
				input#newsTitle(type='text', data-bind="value: news.title, valueUpdate: 'afterkeydown'")
		.control-group
			label.control-label Публикация
			.controls
				input#newsPdate(type='text', data-bind="value: news.pdate, valueUpdate: 'keyup'")
				button.btn-strict.btn-strict-small.toggleTDate(type="button", data-bind="click: toggleTDate")
					span(data-bind="text: tDateExists() ? 'Убрать окончание публикации' : 'Добавить окончание публикации'")
				//ko if: tDateExists()
				input#newsTdate(type='text', data-bind="value: news.tdate, valueUpdate: 'keyup'")
				// /ko
		.control-group
			.textName
				button.btn-strict.btn-strict-small.toggleNotice(type="button", data-bind="click: toggleNotice")
					span(data-bind="text: noticeExists() ? 'Убрать краткую версию' : 'Добавить краткую версию'")
				//ko if: noticeExists()
				span.muted Краткая версия
				// /ko

			//ko if: noticeExists()
			textarea#newsNotice
			// /ko
		.control-group
			.textName Полная версия
			textarea#newsPrimary