doctype 5
html
	head
		meta(http-equiv="content-type", content="text/html; charset=utf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0")
		meta(name="apple-mobile-web-app-capable", content="yes")
		meta(http-equiv="cache-control", content="no-cache")
		meta(http-equiv="X-UA-Compatible", content="IE=Edge,chrome=IE8")
		title= pageTitle
		link(rel="stylesheet", type="text/css", href="/style/normalize.css?__=" + appHash)
		link(rel="stylesheet", type="text/css", href="/style/fonts.css?__=" + appHash)
		style.
			html,body{height:100%;min-height:100%;overflow:hidden}
			div {
				position:absolute;
			}
			.layer1{
				background: url(/images/misc/500.jpg) 0 0 no-repeat;
				background-size: cover;
				margin-left: 0px;
				width: 100%;
				height: 100%;
				top:0;left:0;
			}
			.msg{
				color: #000;
				font: 30px/30px UCondensed;
				left: 12px;
				top: 5px;
			}
		
	body
		div.layer1
		div.msg
			= mess