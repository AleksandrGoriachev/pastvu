doctype 5
html
	include ../includes/head_meta
		title Error - PastVu
		link(rel="stylesheet", type="text/css", href="/style/normalize.css?__=" + appHash)
		link(rel="stylesheet", type="text/css", href="/style/fonts.css?__=" + appHash)
		style.
			html,body{height:100%; min-height:100%; overflow:hidden}
			.back{
				position: absolute;
				background: url(/img/misc/500.jpg) 0 0 no-repeat;
				background-size: cover;
				margin-left: 0px;
				width: 100%;
				height: 100%;
				top:0; left:0;
			}
			a.msg {
				position: absolute;
				display: block;
				top: 40px;
				left: 40px;
				padding: 3px 0 0 60px;
				height: 60px;
				color: #555;
				font: 30px/30px UCondensed;               ``
				cursor: pointer;
				text-shadow: 1px 1px 0 #ccc, -1px 1px 0 #ccc, 1px -1px 0 #ccc, -1px -1px 0 #ccc;
				background: url(/img/misc/logob.png) 0 0 no-repeat;
				text-decoration: none;
			}
			.msg:hover {
				color: #111;
				text-decoration: none;
			}
		
	body
		div.back
		a.msg(href="/")
			span Sorry, server failed to fulfill an apparently request
			span(style="display: block; font-size: 18px; line-height: 18px;") [click here to go to the main page]