#top_panel_fringe.fringe
	#top_panel.inner_bord
		#appName
			| Retro photo of mankind's habitat
		#panelTools
			#toUpload.labledIco.strokeAfter.iconBefore(data-bind='style:{display: loggedIn()?"":"none"}, event:{click: function(data, evt){window.open("/photoUpload")}}')
				.ico
				.text(data-bind="text: uploadPhoto")
			#toAdmin.labledIco.strokeAfter.iconBefore(data-bind='style:{display: auth.iAm.role_level()>=50 ? "":"none"}, event:{click: function(data, evt){window.open("/admin")}}')
				.ico
				.text(data-bind="text: admin")
			#toProfile.labledIco.iconBefore(data-bind='style:{display: loggedIn()?"":"none"}, event:{click: function(data, evt){window.open("/u/"+auth.iAm.login())}}')
				.fringe
					.ico.inner_bord(data-bind="style: {backgroundImage: 'url('+profileAvatar()+')'}")
				.text(data-bind="text: profile")
			#toRegister.labledIco.iconBefore(data-bind='style:{display: loggedIn() || !registrationAllowed() ? "none":""}, event:{click: function(data, evt){data.auth.FormOpen("#reg_fringe")}}')
				.ico
				.text(data-bind="text: register")
			#toLogIn.labledIco.strokeBefore.iconAfter(data-bind='style:{display: loggedIn()?"none":""}, event:{click: function(data, evt){data.auth.FormOpen("#login_fringe")}}')
				.text(data-bind="text: login")
				.ico
			#toLogOut.labledIco.strokeBefore.iconAfter(data-bind='style:{display: loggedIn()?"":"none"}, event:{click: function(data, evt){data.auth.Logout()}}')
				.text(data-bind="text: logout")
				.ico
#logo_fringe.fringe
	a#logo.inner_bord(href='/', target='_self')