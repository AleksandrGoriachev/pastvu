.reason(data-bind="with: repository[M!M]")
	h5(data-bind="html: options.text")
	form
		//ko if: options.select.length > 1
		.form-group
			select#presetoptions.form-control(size="1", data-bind="options: options.select, optionsValue: 'key', optionsText: 'name', value: selectedKey")
		// /ko
		.form-group
			//ko if: options.select.length > 1 && selected().key !== '0' || selected().desclable
			label.desclabel(for="desc", data-bind="html: selected().desclable || 'Дополнительная информация'")
			// /ko
			textarea#desc.form-control(data-bind="value: desc, attr: {maxlength: selected().descmax || '1000'}", style="resize: vertical;")
		.form-group
			//ko if: errMsg()
			.error(data-bind="html: errMsg()")
			// /ko