.user_brief(data-bind="with: repository[M!M]")
	.row-fluid
		.avatar.fringe
			img(data-bind="attr: {src: user.avatar()}, event: {load: onAvatarLoad, error: onAvatarError}")
			//-button.btn-strict.btn-strict-small#avatar_edit(type="button", data-bind="event: {}, style: {display: can_avatar() ? '' : 'none'}")
				i.icon-picture.icon-white
				span Change avatar
	//-.row-fluid(data-bind="style: {display:  can_pm() ? '': 'none'}")
		button.btn-strict(type="button", data-bind="event: {}")
			i.icon-envelope.icon-white
			span Send message
	.row-fluid.userName(data-bind="text: user.disp()")
	//ko if: rn()
	.row-fluid.roleName(data-bind="text: rn(), css: rc()")
	// /ko
	.row-fluid.statBlock
		#info_common.block
			.head Общее
			.h_separator
			dl.dl-horizontal
				dt Регистрация:
				dd(data-bind="text: moment(user.regdate()).format('D MMMM YYYY')")
				dt Статус:
				dd Оффлайн
	.row-fluid.statBlock
		#short_stat.block
			.head Краткая статистика
			.h_separator
			dl.dl-horizontal
				dt Фотографий:
				dd(data-bind="text: user.pcount()")
				//-dt Blogs created:
				//-dd(data-bind="text: user.bcount()")
				//-dt Favorite areas:
				//-dd 0
				dt Комментариев:
				dd(data-bind="text: user.ccount()")
	//#leftSideDash